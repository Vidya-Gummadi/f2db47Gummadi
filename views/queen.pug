extends layout
block content
    div(class="container-fluid")
        h1= title
    -let create = `dispatch(\"/queen/create\")`
    button.btn( class="btn-primary ml-1", onclick= create) Create
    - let result=results 
        div(class="container-fluid")
        div(class="row m-1")
        each item in result
         -let destination = `dispatch(\"/queen/update?id=${item._id}\")`
         -let detail = `dispatch(\"/queen/detail?id=${item._id}\")`
         -let d = `dispatch(\"/queen/delete?id=${item._id}\")`
         div(class="row-sm-2", class="m-1") Item#{item.name}(#{item.age}) is #{item.place}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
          button.btn( class="btn-primary ml-1", onclick= detail) Detail
          button.btn( class="btn-primary ml-1", onclick= d) Delete

    script.
        function buy(itemNo)
        {
            alert(`You purchased Item ${itemNo+1}`)
        }
    script.
        function dispatch(path){
            window.location.href=path
        }